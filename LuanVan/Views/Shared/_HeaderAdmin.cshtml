@using LuanVan.Models;
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<KhachHang> SignInManager
@inject UserManager<KhachHang> UserManager

<header class="header navbar-area">
    <div class="topbar">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-2 col-md-3 col-12">
                    <div class="dropdown">
                        <button type="button" class="btn btn-outline-light dropdown-toggle" data-bs-toggle="dropdown">
                            @ViewData["language"]
                        </button>
                        <ul class="dropdown-menu">
                            <li><a asp-area="Store" asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="vi-VN" class="dropdown-item"><i class="flag-icon flag-icon-gb"></i>@_localization.Getkey("Vietnamese")</a></li>
                            <li><a asp-area="Store" asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="en-US" class="dropdown-item"><i class="flag-icon flag-icon-gb"></i>@_localization.Getkey("English")</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="top-left">
                        <ul class="menu-top-link">
                            <li><a style="color:white;" href="/AdminManage/Home/Index">@_localization.Getkey("AreaAdmin")</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-12">
                    <div class="top-end">
                        <ul class="user-login">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                string username = "";
                                KhachHang user = await UserManager.FindByNameAsync(User.Identity?.Name);
                                if (user != null)
                                {
                                    username = user.HoKhachHang + " " + user.TenKhachHang;

                                }
                                else
                                {
                                    username = User.Identity.Name;
                                }


                                <li><i class="fa-regular fa-user" style="color:white;"></i> <a href="/Store/Account/Info"> @_localization.Getkey("Hello") @username </a></li>
                                <li><a href="/Store/Login/Logout">@_localization.Getkey("Logout") </a> <i class="fa-solid fa-right-from-bracket" style="color:white;"></i></li>
                            }
                            else
                            {
                                <li><i class="fa-solid fa-arrow-right-to-bracket" style="color:white;"></i> <a asp-area="Identity" asp-page="/Account/Login"> @_localization.Getkey("Login")</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12 col-md-6 col-12">
                <div class="nav-inner">
                    <div class="mega-category-menu">
                        <span class="cat-button"><i class="lni lni-menu"></i>@_localization.Getkey("DanhMuc")</span>
                        <ul class="sub-category">
                            <li>
                                <a asp-page="../User/Index">@_localization.Getkey("UserList")</a>
                            </li>
                            <li>
                                <a asp-page="../Role/Index">@_localization.Getkey("RoleList")</a>
                            </li>
                            <li>
                                <a asp-page="../Producer/Index">@_localization.Getkey("ProducerList")</a>
                            </li>
                            <li>
                                <a asp-page="../Product/Index">@_localization.Getkey("ProductList")</a>
                            </li>
                            <li>
                                <a asp-page="../ProductType/Index">@_localization.Getkey("ProductTypeList")</a>
                            </li>
                            <li>
                                <a asp-page="../Color/Index">@_localization.Getkey("ColorList")</a>
                            </li>
                            <li>
                                <a asp-page="../Promotion/Index">@_localization.Getkey("DiscountList")</a>
                            </li>
                            <li>
                                <a asp-page="../Bill/Index">@_localization.Getkey("BillList")</a>
                            </li>
                            <li>
                                <a asp-page="../Payment/Index">@_localization.Getkey("PaymentMethodList")</a>
                            </li>

                        </ul>
                    </div>

                    <nav class="navbar navbar-expand-lg">
                        <button class="navbar-toggler mobile-menu-btn"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#navbarSupportedContent"
                                aria-controls="navbarSupportedContent"
                                aria-expanded="false"
                                aria-label="Toggle navigation">
                            <span class="toggler-icon"></span>
                            <span class="toggler-icon"></span>
                            <span class="toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse sub-menu-bar"
                             id="navbarSupportedContent">
                            <ul id="nav" class="navbar-nav ms-auto">
                                <li class="nav-item">
                                    <a asp-page="../Home/Index"
                                       aria-label="Toggle navigation">@_localization.Getkey("Home")</a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Store/Intro/Index"
                                       aria-label="Toggle navigation">@_localization.Getkey("Intro")</a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Store/Contact/Index" aria-label="Toggle navigation">@_localization.Getkey("Contact")</a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Store/Home/Index" aria-label="Toggle navigation">@_localization.Getkey("BackToShop")</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>

        </div>
    </div>

</header>