@page
@model EditModel
@{
    ViewData["Title"] = @_localization.Getkey("EditRoleUser");
    var currentCulture = Thread.CurrentThread.CurrentCulture.Name;
    Console.WriteLine(currentCulture);
    if (currentCulture == "vi-VN")
        ViewData["language"] = _localization.Getkey("Vietnamese");
    else if (currentCulture == "en-US")
        ViewData["language"] = _localization.Getkey("English");
    else ViewData["language"] = "";
}

@*<h2>@ViewData["Title"]</h2>*@

<div class="breadcrumbs">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">@_localization.Getkey("ListRole")</h1>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <ul class="breadcrumb-nav">
                    <li>
                        <a asp-page="../Home/Index"><i class="lni lni-home"></i> @_localization.Getkey("AdminPage")</a>
                    </li>
                    <li>
                        <a asp-page="Index" asp-area="AdminManage"><i class="lni lni-list"></i> @_localization.Getkey("ListRole")</a>
                    </li>
                    <li>@_localization.Getkey("EditRoleUser")</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<partial name="_StatusMessage" model="@Model.StatusMessage" />

<div class="account-login section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-10 offset-md-1 col-12">
                <form class="card login-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="card-body">
                        <div class="title">
                            <h3>@_localization.Getkey("EditRoleUser")</h3>
                            <p>
                                @_localization.Getkey("EditRoleUser") @Model.role.Name
                            </p>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.RoleID" class="form-control" disabled />
                            <label asp-for="Input.RoleID">@_localization.Getkey("RoleID") <span class="text-danger">*</span></label>
                            <span asp-validation-for="Input.RoleID" class="text-danger p-2"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.Name" class="form-control" aria-required="true" />
                            <label asp-for="Input.Name">@_localization.Getkey("RoleNameUser") <span class="text-danger">*</span></label>
                            <span asp-validation-for="Input.Name" class="text-danger p-2"></span>
                        </div>
                        <div class="button">
                            <button class="btn" type="submit">@_localization.Getkey("UpdateStatusAccount")</button>
                            <hr />
                            <a class="btn btn-info" asp-page="./Index">@_localization.Getkey("BackTo")</a>
                        </div>
                    </div>
                    @*<hr>
                    <div class="card-body">
