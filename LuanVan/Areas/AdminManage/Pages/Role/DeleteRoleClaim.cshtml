@page
@model DeleteRoleClaimModel
@{
    ViewData["Title"] = "Xóa đặc tính của role (Delete claim of role)";
    var currentCulture = Thread.CurrentThread.CurrentCulture.Name;
    Console.WriteLine(currentCulture);
    if (currentCulture == "vi-VN")
        ViewData["language"] = _localization.Getkey("Vietnamese");
    else if (currentCulture == "en-US")
        ViewData["language"] = _localization.Getkey("English");
    else ViewData["language"] = "";
}



@*<h2>@ViewData["Title"]: @Model.role.Name</h2>*@


<div class="breadcrumbs">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">Role-Claim</h1>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <ul class="breadcrumb-nav">
                    <li>
                        <a asp-page="../Home/Index"><i class="lni lni-home"></i> Trang quản trị</a>
                    </li>
                    <li>
                        <a asp-page="Index" asp-area="AdminManage"><i class="lni lni-list"></i> Danh sách role</a>
                    </li>
                    <li>Xóa đặc tính của role</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>

<div class="account-login section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-10 offset-md-1 col-12">
                <form class="card login-form" method="post">
                    <div class="card-body">
                        <div class="title">
                            <h3>Xác nhận xóa đặc tính của role</h3>
                            <p>
                                Xóa đặc tính của role <strong>@Model.role.Name</strong>
                            </p>
                        </div>
                        <div class="form-floating">
                            Bạn có chắc chắn xóa claim <strong>@Model.claim.ClaimType : @Model.claim.ClaimValue</strong> của role <strong>@Model.role.Name</strong>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="button">
                            <button class="btn btn-danger" type="submit">Xóa</button>
                            <hr />
                            <a class="btn" asp-page="./Index">Danh sách các role</a>
                        </div>
                        
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
