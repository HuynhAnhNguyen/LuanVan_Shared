@model IEnumerable<LuanVan.Models.SanPham>
<section class="special-offer section" style="padding-top: 0px">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h2>@_localization.Getkey("Products_Discount")</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-12">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-md-6 col-12">
                            @await Html.PartialAsync("_Product_Card", item)
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

