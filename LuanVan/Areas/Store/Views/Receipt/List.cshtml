@model IEnumerable<LuanVan.Models.HoaDon>
@{
    ViewData["Title"] = @_localization.Getkey("Payment_history");
    Layout = "~/Areas/Store/Views/Shared/_Layout.cshtml";
}
<div class="breadcrumbs">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">@_localization.Getkey("Payment_history")</h1>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <ul class="breadcrumb-nav">
                    <li>
                        <a href="/Store/Home/Index"><i class="lni lni-home"></i> @_localization.Getkey("Home")</a>
                    </li>
                    <li>@_localization.Getkey("Payment_history")</li>
                </ul>
            </div>
        </div>
    </div>
</div>



@if (Model.Count() > 0)
{
    <div class="account-login section">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3 col-md-10 offset-md-1 col-12">
                    <div class="register-form">
                        <div class="title">
                            <div class="section-title p-0">
                                <h2>@_localization.Getkey("Payment_history")</h2>
                            </div>
                        </div>

                        <div class="row">
                            <table class="table v-middle table-hover mb-0">
                                <thead class="thead-light">
                                    <tr class="bg-light">
                                        <th>@_localization.Getkey("STT")</th>
                                        <th>@_localization.Getkey("Code_bill")</th>
                                        <th>@_localization.Getkey("Date_of_payment")</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int stt = 1;
                                    }
                                    @foreach (var hoaDon in Model)
                                    {
                                        <tr>
                                            <td>
                                                @stt @{
                                                    stt++;
                                                }
                                            </td>
                                            <td>
                                                <a href="/Store/Receipt/Detail?mahd=@hoaDon.MaHoaDon">@hoaDon.MaHoaDon</a>
                                            </td>
                                            <td>
                                                @hoaDon.NgayXuatHd
                                            </td>
                                            <td>
                                                <a href="/Store/Receipt/Detail?mahd=@hoaDon.MaHoaDon" class="text-primary text-decoration-none">@_localization.Getkey("Detail")</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="account-login section">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3 col-md-10 offset-md-1 col-12">
                    <div class="register-form">
                        <div class="title">
                            <div class="section-title p-0">
                                <h2>@_localization.Getkey("Payment_history")</h2>
                            </div>
                        </div>

                        <div class="row">
                            <div class="text-center">@_localization.Getkey("No_payment_history")</div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
