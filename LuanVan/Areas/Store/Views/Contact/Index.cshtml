
@{
    ViewData["Title"] = @_localization.Getkey("Contact");
    Layout = "~/Areas/Store/Views/Shared/_Layout.cshtml";
}
<div class="breadcrumbs">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">@_localization.Getkey("Contact")</h1>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <ul class="breadcrumb-nav">
                    <li>
                        <a href="/Store/Home/Index"><i class="lni lni-home"></i> @_localization.Getkey("Home")</a>
                    </li>
                    <li>@_localization.Getkey("Contact")</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<section id="contact-us" class="contact-us section">
    <div class="container">
        <div class="contact-head">
            <div class="row">
                <div class="col-12">
                    <div class="section-title">
                        <h2>@_localization.Getkey("Contact_us")</h2>
                        <p>
                            @_localization.Getkey("Feedback")
                        </p>
                    </div>
                </div>
            </div>
            <div class="contact-info">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-12">
                        <div class="contact-form-head">
                            <div class="form-main">
                                <form class="form">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-12">
                                            <div class="form-group">
                                                <input name="HoVaTen" id="HoVaTen"
                                                       type="text"
                                                       placeholder="@_localization.Getkey("Lastname_firstname")"
                                                       required="required" />
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-12">
                                            <div class="form-group">
                                                <input name="TieuDe" id="TieuDe"
                                                       type="text"
                                                       placeholder="@_localization.Getkey("Title")"
                                                       required="required" />
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-12">
                                            <div class="form-group">
                                                <input name="Email" id="Email"
                                                       type="email"
                                                       placeholder="@_localization.Getkey("Email")"
                                                       required="required" />
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-12">
                                            <div class="form-group">
                                                <input name="SoDienThoai" id="SoDienThoai"
                                                       type="text"
                                                       placeholder="@_localization.Getkey("Phonenumber")"
                                                       required="required" />
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group message">
                                                <textarea name="NoiDung" id="NoiDung"
                                                          placeholder="@_localization.Getkey("Content")"></textarea>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group button">
                                                <button type="submit" class="btn">
                                                    @_localization.Getkey("Submit")
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $('.form').submit(function (event) {
            event.preventDefault(); // Ngăn không cho trình duyệt submit form

            var hoVaTen = $('#HoVaTen').val();
            var tieuDe = $('#TieuDe').val();
            var email = $('#Email').val();
            var soDienThoai = $('#SoDienThoai').val();
            var noiDung = $('#NoiDung').val();

            $.ajax({
                'type': 'POST',
                'url': '/Store/Contact/SendMail',
                'data': {
                    'hoVaTen': hoVaTen,
                    'tieuDe': tieuDe,
                    'email': email,
                    'soDienThoai': soDienThoai,
                    'noiDung': noiDung,
                },
                success: function (response) {
                    alert("Gửi email thành công!"); // Hiển thị thông báo thành công
                    $('.form')[0].reset(); // Reset form sau khi gửi
                },
                error: function (error) {
                    alert("Gửi email không thành công!"); // Hiển thị thông báo lỗi
                }
            });
        });
    });
</script>
