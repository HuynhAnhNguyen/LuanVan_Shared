
@{
    ViewData["Title"] = @_localization.Getkey("About_the_website");
    Layout = "~/Areas/Store/Views/Shared/_Layout.cshtml";
}
<div class="breadcrumbs">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">@_localization.Getkey("Intro")</h1>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <ul class="breadcrumb-nav">
                    <li>
                        <a href="/Store/Home/Index"><i class="lni lni-home"></i> @_localization.Getkey("Home")</a>
                    </li>
                    <li>@_localization.Getkey("Intro")</li>
                </ul>
            </div>
        </div>
    </div>
</div>


<section class="about-us section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-3 col-md-12 col-12">
                <div class="content-left">
                    <img src="~/images/logo/logo.svg" alt="logo" />
                </div>
            </div>
            <div class="col-lg-9 col-md-12 col-12">
                <div class="content-right">
                    <h2>@_localization.Getkey("ISHOPPING") </h2>
                    <p>
                        @_localization.Getkey("IntroContent1")
                    </p>
                    <p>
                        @_localization.Getkey("IntroContent2")
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>