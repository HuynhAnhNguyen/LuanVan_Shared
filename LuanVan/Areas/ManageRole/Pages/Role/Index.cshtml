@page
@model LuanVan.Areas.ManageRole.Pages.Role.IndexModel
@{
    ViewData["Title"]= "Danh sách các Role (Vai trò)";
}

@*<h2>@ViewData["Title"]</h2>*@

<partial name="_StatusMessage" model="@Model.StatusMessage" />

<div class="mb-2">
    <a class="btn btn-secondary" asp-page="./Create">Thêm mới Role</a>
    <a class="btn btn-secondary" asp-page="../User/Index">Quản lý thành viên</a>

</div>

<table class="table">
    <tr>
        <th>Tên role (Vai trò)</th>
        <th>Tác vụ</th>
    </tr>
    @foreach(var role in Model.roles)
    {
        <tr>
            <td>
                <p class="mb-2">@role.Name</p>
                <small>
                    @foreach(var claim in role.Claims)
                {
                    <small>@claim</small> <br />
                }
                </small>
            </td>

            <td>
                <a class="btn btn-primary" asp-page="./Edit" asp-route-roleid="@role.Id">Cập nhật</a>
                <a class="btn btn-secondary" asp-page="./Delete" asp-route-roleid="@role.Id">Xóa</a>
            </td>
        </tr>
    }
</table>