@page
@model LuanVan.Areas.ManageRole.Pages.Role.EditModel
@{
    ViewData["Title"] = "Danh sách các Role (Vai trò)";
}

@*<h2>@ViewData["Title"]</h2>*@

<partial name="_StatusMessage" model="@Model.StatusMessage" />

<div class="breadcrumbs">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">Chỉnh sửa role (vai trò)</h1>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <ul class="breadcrumb-nav">
                    <li>
                        <a asp-action="Index" asp-controller="Home" asp-area="Store"><i class="lni lni-home"></i> Trang chủ</a>
                    </li>
                    <li>
                        <a asp-page="Index" asp-area="ManageRole"><i class="lni lni-list"></i> Danh sách role</a>
                    </li>
                    <li>Chỉnh sửa role (vai trò)</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="account-login section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-10 offset-md-1 col-12">


                <form class="card login-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="card-body">
                        <div class="title">
                            <h3>Chỉnh sửa role (vai trò)</h3>
                            <p>
                                Chỉnh sửa role (vai trò) : @Model.role.Name
                            </p>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.Name" class="form-control" aria-required="true" />
                            <label asp-for="Input.Name">Tên role (Vai trò) <span class="text-danger">*</span></label>
                            <span asp-validation-for="Input.Name" class="text-danger p-2"></span>
                        </div>


                        <div class="button">
                            <button class="btn" type="submit">Cập nhật</button>
                            <hr />
                            <a class="btn btn-primary" asp-page="./Index">Danh sách các role</a>
                        </div>
                        
                    </div>


                    <hr>


                    <div class="card-body">
                        <p>
                            Các đặc tính (Claims) của role
                            <a class="btn btn-primary" asp-page="./AddRoleClaim" asp-route-roleid="@Model.role.Id">+ Thêm đặc tính (claim) chỉ thuộc về role</a>
                        </p>
                        @if (Model.Claims.Count() > 0)
                        {
                            <ul>
                                @foreach (var claim in Model.Claims)
                                {
                                    <li>
                                        <a asp-page="./EditRoleClaim" asp-route-claimid="@claim.Id">
                                            @claim.ClaimType : @claim.ClaimValue

                                        </a>
                                    </li>
                                }
                            </ul>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
