@page
@model ResetPasswordModel
@{
    ViewData["Title"] = @_localization.Getkey("ResetPassword");
}




<div class="breadcrumbs">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">@_localization.Getkey("ResetPassword")</h1>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <ul class="breadcrumb-nav">
                    <li>
                        <a asp-action="Index" asp-controller="Home" asp-area="Store"><i class="lni lni-home"></i> @_localization.Getkey("Home")</a>
                    </li>
                    <li>@_localization.Getkey("ResetPassword")</li>
                </ul>
            </div>
        </div>
    </div>
</div>



<div class="account-login section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-10 offset-md-1 col-12">
                <div class="register-form">
                    <div class="title">
                        <h3>@_localization.Getkey("ResetPasswordTitle")</h3>

                    </div>
                    <form class="row" method="post">
                        <input asp-for="Input.Code" type="hidden" />


                        <div class="col-sm-12">
                            @*Mật khẩu*@
                            <div class="form-floating">
                                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="@_localization.Getkey("Email")" />
                                <label asp-for="Input.Email" class="form-label">@_localization.Getkey("Email") <span class="text-danger">*</span></label>
                                <span asp-validation-for="Input.Email" class="text-danger p-2"></span>
                            </div>

                        </div>

                        <div class="col-sm-12">
                            @*Mật khẩu*@
                            <div class="form-floating">
                                <input asp-for="Input.Password" class="form-control" aria-required="true" placeholder="@_localization.Getkey("NewPassword")" />
                                <label asp-for="Input.Password" class="form-label">@_localization.Getkey("Password") <span class="text-danger">*</span></label>
                                <span asp-validation-for="Input.Password" class="text-danger p-2"></span>
                            </div>

                        </div>

                        <div class="col-sm-12">
                            @*Mật khẩu*@
                            <div class="form-floating">
                                <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" placeholder="@_localization.Getkey("PasswordConfirm")" />
                                <label asp-for="Input.ConfirmPassword" class="form-label">@_localization.Getkey("PasswordConfirm") <span class="text-danger">*</span></label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger p-2"></span>
                            </div>

                        </div>
                        <div class="button">
                            <button class="btn" type="submit">@_localization.Getkey("UpdatePassword")</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

