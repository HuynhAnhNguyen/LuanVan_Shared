<div class="account-login section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-10 offset-md-1 col-12">
                <div class="card login-form">

                    <div class="card-body">
                        <div class="title">
                            <h3>@_localization.Getkey("LoginNow")</h3>
                            <p>
                                @_localization.Getkey("LoginTitle")
                            </p>
                        </div>
                        <div class="social-login">
                            <div class="row">
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <div class="col-lg-12 col-md-12 col-12">
                                            @if (provider.Name.Equals("Facebook"))
                                            {
                                                <div class="row">
                                                    <button type="submit" class="btn facebook-btn" name="provider" value="@provider.Name" title=" @_localization.Getkey("Continue_with") @provider.DisplayName account"><i class="lni lni-facebook-filled"></i>@_localization.Getkey("Continue_with") @provider.DisplayName</button>

                                                </div>
                                                <br />
                                            }
                                            else if (provider.Name.Equals("Google"))
                                            {
                                                <div class="row">
                                                    <button type="submit" class="btn google-btn" name="provider" value="@provider.Name" title=" @_localization.Getkey("Continue_with") @provider.DisplayName account"><i class="lni lni-google"></i> @_localization.Getkey("Continue_with") @provider.DisplayName</button>

                                                </div>
                                                <br />
                                            }
                                            else
                                            {
                                                <div class="row">
                                                    <button type="submit" class="btn twitter-btn" name="provider" value="@provider.Name" title=" @_localization.Getkey("Continue_with") @provider.DisplayName account"><i class="lni lni-microsoft"></i> @_localization.Getkey("Continue_with") @provider.DisplayName</button>

                                                </div>
                                            }
                                        </div>
                                    }
                                </form>
                            </div>
                        </div>
                        <div class="alt-option">
                            <span>@_localization.Getkey("Or")</span>
                        </div>
                        <form method="post">

                            <div class="card-body">
                                @*Username*@
                                <div class="form-floating">
                                    <input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true" />
                                    <label asp-for="Input.Username" class="form-label">@_localization.Getkey("Email_Username") <span class="text-danger">*</span></label>
                                    <span asp-validation-for="Input.Username" class="text-danger p-2"></span>
                                </div>

                                @*Password*@
                                <div class="form-floating">
                                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="on" aria-required="true" />
                                    <label asp-for="Input.Password" class="form-label">@_localization.Getkey("Password") <span class="text-danger">*</span></label>
                                    <span asp-validation-for="Input.Password" class="text-danger p-2"></span>

                                </div>

                                @*Token ReCaptcha*@
                                <div class="form-floating">
                                    <input asp-for="Input.Token" class="form-control"  hidden />

                                </div>

                                <div class="d-flex flex-wrap justify-content-between bottom-content">
                                    <div class="form-check">
                                        <label asp-for="Input.RememberMe" class="form-label">
                                            <input class="form-check-input" asp-for="Input.RememberMe" />
                                            @_localization.Getkey("RememberMe")
                                        </label>
                                    </div>
                                    <a class="lost-pass" href="/Identity/Account/ForgotPassword">@_localization.Getkey("ForgotPassword")</a>
                                </div>

                                <div class="button">
                                    <button class="btn" type="submit">@_localization.Getkey("Login")</button>
                                </div>
                                <p class="outer-link">
                                    @_localization.Getkey("Dont_have_account")
                                    <a href="/Identity/Account/Register">@_localization.Getkey("RegisterNow") </a>
                                </p>
                                <div class="alt-option">
                                    <span>@_localization.Getkey("Or") </span>
                                </div>
                                <p class="outer-link">
                                    <a href="/Identity/Account/ResendEmailConfirmation">@_localization.Getkey("ResendEmailConfirmation")</a>
                                </p>

                            </div>
                        </form>

                    </div>
                </div>




            </div>
        </div>
    </div>
</div>

<script src="https://www.google.com/recaptcha/api.js?render=6Le5mEwlAAAAAMnlVXoBKTq7tpwELoJ26v_ZagOD"></script>
