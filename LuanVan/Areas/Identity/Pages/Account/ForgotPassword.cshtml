@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = @_localization.Getkey("ForgotPasswordTitle");
}


<div class="breadcrumbs">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">@_localization.Getkey("ForgotPasswordTitle")</h1>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <ul class="breadcrumb-nav">
                    <li>
                        <a asp-action="Index" asp-controller="Home" asp-area="Store"><i class="lni lni-home"></i> @_localization.Getkey("Home")</a>
                    </li>
                    <li>@_localization.Getkey("ForgotPasswordTitle")</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="account-login section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-10 offset-md-1 col-12">
                <form class="card login-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="card-body">
                        <div class="title">
                            <h3>@_localization.Getkey("ForgotPasswordTitle")</h3>
                            <p>
                                @_localization.Getkey("ForgotPasswordContent2")
                            </p>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control" aria-required="true" />
                            <label asp-for="Input.Email">@_localization.Getkey("Email") <span class="text-danger">*</span></label>
                            <span asp-validation-for="Input.Email" class="text-danger p-2"></span>
                        </div>


                        <div class="button">
                            <button class="btn" type="submit">@_localization.Getkey("ForgotPasswordContent1")</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

