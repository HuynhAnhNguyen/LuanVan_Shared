@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = @_localization.Getkey("DeletePersonalData");
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

@*<h3>@ViewData["Title"]</h3>*@

<div class="alert alert-warning" role="alert">
    <p>
        <strong>@_localization.Getkey("DeletePersonalDataTitle")</strong>
    </p>
</div>

<form id="delete-user" method="post">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="col-sm-12">
            @if (Model.RequirePassword)
            {
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true"/>
                    <label asp-for="Input.Password" class="form-label">@_localization.Getkey("Password") <span class="text-danger">*</span></label>
                    <span asp-validation-for="Input.Password" class="text-danger p-2"></span>
                </div>
            }
        </div>


    </div>
    <button class="w-100 btn btn-lg btn-danger" type="submit">@_localization.Getkey("DeletePersonalDataConfirm")</button>
</form>

        
        


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
