@page
@model SetPasswordModel
@{
    ViewData["Title"] = @_localization.Getkey("SetPassword");
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

@*<h3>Set your password</h3>*@
<partial name="_StatusMessage" for="StatusMessage" />

<p class="text-info">
    @_localization.Getkey("SetPasswordTitle")
</p>

<form id="set-password-form" method="post">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="col-sm-12">
            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control" aria-required="true"/>
                <label asp-for="Input.NewPassword" class="form-label">@_localization.Getkey("NewPasswordChange") <span class="text-danger">*</span></label>
                <span asp-validation-for="Input.NewPassword" class="text-danger p-2"></span>
            </div>
        </div>

        <div class="col-sm-12">
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control"  />
                <label asp-for="Input.ConfirmPassword" class="form-label">@_localization.Getkey("ConfirmPasswordChange") <span class="text-danger">*</span></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="w-100 btn btn-lg btn-primary">@_localization.Getkey("SetPassword")</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
