@page
@model PersonalDataModel
@{
    ViewData["Title"] = @_localization.Getkey("PersonalData");
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

@*<h3>@ViewData["Title"]</h3>*@

<div class="row">
    <div class="col-sm-12">
        @_localization.Getkey("PersonalDataTitle")
    </div>

    <div class="col-sm-12">
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="btn btn-primary" type="submit">@_localization.Getkey("Download")</button>
        </form>
    </div>
    <br />
    <br />
    <div class="col-sm-12">
        <strong>@_localization.Getkey("DeletePersonalDataTitle")</strong>
    </div>
    
    <div class="col-sm-12">
        <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">@_localization.Getkey("DeleteData")</a>
    </div>
</div>
    

